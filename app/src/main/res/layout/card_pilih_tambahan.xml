<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp"
    android:id="@+id/cvCARD_PILIH_TAMBAHAN">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#3800FF"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Id Tambahan:"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingLeft="16dp"
                android:paddingTop="3dp"/>

            <TextView
                android:id="@+id/tvCARD_PILIH_TAMBAHAN_ID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:gravity="end|center_vertical"
                android:paddingRight="16dp" />
        </LinearLayout>

        <!-- Konten isi + delete button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Info nama & harga -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCARD_PILIH_TAMBAHAN_NAMA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Harga: "
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvCARD_PILIH_TAMBAHAN_HARGA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Icon Delete -->
            <ImageView
                android:id="@+id/btnHapusTambahan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/delete"
                android:contentDescription="Hapus tambahan"
                android:layout_marginStart="8dp"
                android:clickable="true"
                android:focusable="true"
                android:scaleType="centerInside"
                android:padding="10dp"/>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
