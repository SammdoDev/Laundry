<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pegawai.tambah_pegawai">

    <TextView
        android:id="@+id/tvpegawaijudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tambah_pegawai"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:textSize="25dp"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/form"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvpegawaijudul"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <TextView
                android:id="@+id/tvnamaaddpegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_pegawai_form" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardCornerRadius="12px"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etpegawainama"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/nama_pegawai_form"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tvalamataddpegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_alamat" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardCornerRadius="12px"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etpegawaialamat"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/label_alamat"
                    android:maxLength="20"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tvNoHpaddpegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nohp_form" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardCornerRadius="12px"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etpegawainohp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/nohp_form"
                    android:inputType="number"
                    android:maxLength="20"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="290dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <TextView
                android:id="@+id/tvCabangaddpegawai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Cabang" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="50dp"
                app:cardCornerRadius="12px"
                android:layout_marginTop="20dp">

                <EditText
                    android:id="@+id/etpegawaicabang"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/Cabang"
                    android:maxLength="20"
                    android:layout_margin="5dp"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </RelativeLayout>


    <Button
        android:id="@+id/btpegawaisimpan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/Simpan"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:contentDescription="Tekan untuk menyimpan data"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/form"
        android:layout_margin="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>